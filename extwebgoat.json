{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
              },
     
   
        "typeHandlerVersion": {
            "type": "string",
            "defaultValue": "2.0",
            "allowedValues": [
                "1.4",
                "1.5",
                "2.0"
            ],
            "metadata": {
                "description": "Virtual Machine Extension Name"
            }
        },
        "customScriptsUrl": {
            "type": "string"
        },
        "commandToExecute": {
            "type": "string",
            "defaultValue": "commandToExecute",
            "metadata": {
                "description": "Command to Execute on the Script"
            }
        
    },
    "variables": {},
    "resources": [
        {
            "comments": "Extension",
            "type": "Microsoft.Compute/virtualMachines/extensions",
           "name": "webgoat-vm/CustomScriptForLinux",
            "apiVersion": "2016-03-30",
            "location": "westus",
            "properties": {
                "publisher": "Microsoft.OSTCExtensions",
                "type": "CustomScriptForLinux",
                "typeHandlerVersion": "1.4",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                         "[parameters('customScriptsUrl')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "sh docker-install.sh"
                }
            }
        }
    ]
}
